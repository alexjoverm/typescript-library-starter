{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["es2016", "dom"],
        "sourceMap": false,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "declaration": true,
        "outDir": "types",
        "typeRoots": [
          "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "**/webpack.config.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true
    }
}