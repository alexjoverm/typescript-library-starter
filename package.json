{
  "name": "shortcutjs",
  "version": "0.0.0-development",
  "description": "Keyboard manager for javascript, made for humans",
  "main": "dist/shortcut.js",
  "repository": "https://github.com/coosto/ShortcutJS",
  "author": "Alex Jover Morales <alexjovermorales@gmail.com>",
  "license": "Apache 2.0",
  "scripts": {
    "lint": "tslint -e node_modules/** **/*.ts ",
    "commit": "git-cz",
    "test": "jest",
    "test:prod": "npm run lint && npm run test -- --coverage",
    "prebuild": "rimraf dist",
    "build": "webpack",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "typescript": {
    "definition": "dist/shortcut.d.ts"
  },
  "files": [
    "dist",
    "readme.md"
  ],
  "config": {
    "ghooks": {
      "/pre-commit": "npm run test:prod"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@types/jest": "^16.0.4",
    "@types/node": "^7.0.0",
    "commitizen": "^2.9.5",
    "coveralls": "^2.11.15",
    "cz-conventional-changelog": "^1.2.0",
    "ghooks": "^2.0.0",
    "jest": "^18.1.0",
    "ts-jest": "^18.0.1",
    "ts-loader": "^1.3.3",
    "ts-node": "^2.0.0",
    "tslint": "^4.3.1",
    "tslint-config-standard": "^3.0.0",
    "typescript": "^2.1.5",
    "webpack": "^2.2.0",
    "semantic-release": "^6.3.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
